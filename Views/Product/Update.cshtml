@model CLASSEM_MVC_PRO.Models.DTOs.ProductDTOs.UpdateProductRequestModel

@{
    ViewData["Title"] = "Edit";
}
@{
    if (TempData["success"] != null)
    {
        <h2>@TempData["success"]</h2>
    }
    if (TempData["failed"] != null)
    {
        <h2>@TempData["failed"]</h2>
    }
}

<h1> ADD PRODUCT</h1>
<hr />
    

<div class="col-md-4">
    @using (Html.BeginForm("Edit", "Product"))
    {

        <div class="form-group">
            @Html.HiddenFor(x => x.ProductId, new {@class = "form-control"})
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Name, new {@class = "control-label"})
            @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
            @Html.ValidationMessageFor(x => x.Name,"", new {@class="text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Description, new {@class = "control-label"})
            @Html.TextBoxFor(x => x.Description, new {@class = "form-control"})
            @Html.ValidationMessageFor(x => x.Description,"", new {@class="text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.SellingPrice, new {@class = "control-label"})
            @Html.TextBoxFor(x => x.SellingPrice, new {@class = "form-control"})
            @Html.ValidationMessageFor(x => x.SellingPrice,"", new {@class="text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Color, new {@class = "control-label"})
            @Html.TextBoxFor(x => x.Color, new {@class = "form-control"})
            @Html.ValidationMessageFor(x => x.Color,"", new {@class="text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Engine, new {@class = "control-label"})
            @Html.TextBoxFor(x => x.Engine, new {@class = "form-control"})
            @Html.ValidationMessageFor(x => x.Engine,"", new {@class="text-danger"})
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">ADD</button>
        </div>
    }
</div>
@section scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

